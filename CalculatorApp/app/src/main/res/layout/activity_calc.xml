<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="399dp"
        android:layout_height="173dp"
        android:layout_marginBottom="18dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvFormula"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/piano"
        android:contentDescription="@string/headerImage" />

    <TextView
        android:id="@+id/tvFormula"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="564dp"
        android:autoSizeMinTextSize="17dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="cursive"
        android:gravity="center|end"
        android:maxLines="1"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/formula_text"
        android:textColor="@color/colorBlack"
        android:textSize="65sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" tools:targetApi="o"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:autoSizeMinTextSize="17dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="cursive"
        android:gravity="center|end"
        android:paddingStart="25dp"
        android:paddingEnd="35dp"
        android:text="@string/formula_text"
        android:textSize="25sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/topBorder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFormula" tools:targetApi="o"/>

    <View
        android:id="@+id/topBorder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/n7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:fontFamily="cursive"
                android:text="@string/n7"
                android:textColor="@color/colorWhite"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/n4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:fontFamily="cursive"
                android:text="@string/n4"
                android:textColor="@color/colorWhite"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/n1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:fontFamily="cursive"
                android:text="@string/n1"
                android:textColor="@color/colorWhite"
                android:textSize="50sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/n0"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:fontFamily="cursive"
                    android:text="@string/n0"
                    android:textColor="@color/colorBlack"
                    android:textSize="50sp"
                    android:textStyle="bold" />
                <View
                    android:id="@+id/verticalLine1"
                    android:translationZ="2dp"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorGray" tools:targetApi="lollipop"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/n8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="cursive"
                android:text="@string/n8"
                android:textColor="@color/colorBlack"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/n5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="cursive"
                android:text="@string/n5"
                android:textColor="@color/colorBlack"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/n2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="cursive"
                android:text="@string/n2"
                android:textColor="@color/colorBlack"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btDot"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="cursive"
                android:text="@string/dot"
                android:textColor="@color/colorBlack"
                android:textSize="60sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/n9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:fontFamily="cursive"
                android:text="@string/n9"
                android:textColor="@color/colorWhite"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/n6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:fontFamily="cursive"
                android:text="@string/n6"
                android:textColor="@color/colorWhite"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/n3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:fontFamily="cursive"
                android:text="@string/n3"
                android:textColor="@color/colorWhite"
                android:textSize="50sp"
                android:textStyle="bold" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btEqual"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:fontFamily="cursive"
                    android:text="@string/equal"
                    android:textColor="@color/colorBlack"
                    android:textSize="60sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/verticalLine2"
                    android:translationZ="2dp"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorGray" tools:targetApi="lollipop"/>


            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btClear"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:fontFamily="cursive"
                    android:text="@string/clear"
                    android:textColor="@color/colorBlack"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/btDelete"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:fontFamily="cursive"
                    android:text="@string/delete"
                    android:textColor="@color/colorBlack"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <Button
                android:id="@+id/btDivide"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="cursive"
                android:text="@string/divide"
                android:textColor="@color/colorBlack"
                android:textSize="60sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btMultiply"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="cursive"
                android:text="@string/multiply"
                android:textColor="@color/colorBlack"
                android:textSize="60sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btSubtract"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="cursive"
                android:text="@string/subtract"
                android:textColor="@color/colorBlack"
                android:textSize="60sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btAdd"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:fontFamily="cursive"
                android:text="@string/add"
                android:textColor="@color/colorBlack"
                android:textSize="60sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>